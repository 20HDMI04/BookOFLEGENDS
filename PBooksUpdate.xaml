<Page x:Class="BookOFLEGENDS.PBooksUpdate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookOFLEGENDS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PBooksUpdate">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BacktoBooks" Content="Vissza" HorizontalAlignment="Left" Width="120" VerticalAlignment="Stretch" Margin="0,5,15,10" Height="30" Click="BooksBack" Grid.Column="0" Grid.Row="0"/>
        <Button x:Name="BooksUpdate" Content="Könyv szerkesztése" HorizontalAlignment="Left" Width="120" VerticalAlignment="Stretch" Margin="130,5,15,10" Height="30" Click="BooksUpdate_Click" Grid.Column="0" Grid.Row="0"/>

        <Label Content="Író név:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="10,10,30,10"/>
        <TextBox x:Name="AuthorBox" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="10,10,30,10" Width="200px" Height="30px"/>

        <Label Content="Könyv címe:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="10,10,30,10"/>
        <TextBox x:Name="BookNameBox" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="10,10,30,10" Width="200px" Height="30px"/>


        <Label Content="Oldalak Száma:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="10,10,30,10"/>
        <TextBox Name="PageCountBox" PreviewTextInput="NumberValidationTextBox"  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Margin="10,10,30,10" Width="200px" Height="30px"/>

    </Grid>
</Page>
