<Page x:Class="BookOFLEGENDS.PAccountsAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookOFLEGENDS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PAccountsAdd">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BacktoUsers" Content="Vissza" HorizontalAlignment="Left" Width="120" VerticalAlignment="Stretch" Margin="0,5,15,10" Height="30" Click="UsersBack" Grid.Column="0" Grid.Row="0"/>
        <Button x:Name="UsersAdding" Content="User hozzáadása" HorizontalAlignment="Left" Width="120" VerticalAlignment="Stretch" Margin="130,5,15,10" Height="30" Click="UsersAdd_Click" Grid.Column="0" Grid.Row="0"/>
        
        <Label Content="Felhasználó név:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="10,10,30,10"/>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="10,10,30,10" Width="200px" Height="30px"/>

        <Label Content="Email:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="10,10,30,10"/>
        <TextBox x:Name="EmailBox" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="10,10,30,10" Width="200px" Height="30px"/>
        
        
        <Label Content="Jelszó:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="10,10,30,10"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Margin="10,10,30,10" Width="200px" Height="30px"/>

        <Label Content="Role:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" Margin="10,10,30,10"/>
        <ComboBox x:Name="UsersRole" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Margin="10,10,30,10" Width="200px" Height="30px">
            <ComboBoxItem Content="User"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

    </Grid>
</Page>
