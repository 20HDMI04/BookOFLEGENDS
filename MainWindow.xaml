<Window x:Class="BookOFLEGENDS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookOFLEGENDS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
 
        <TextBlock x:Name="time" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="0,-140,0,0" FontSize="48" Text="00:00:00"/>

        <Image Width="200" Source="C:\Users\HDMI\source\repos\BookOFLEGENDS\bin\Debug\logo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,550,0"/>

        <Label Content="Felhasználónév:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="-155,50,30,10"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="180,50,30,10" Width="200px" Height="30px"/>

        <Label Content="Jelszó:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="-100,150,30,10"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="180,150,30,10" Width="200px" Height="30px"/>

        <Button x:Name="loginButton" Content="Bejelentkezés" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"  Grid.ColumnSpan="2" Margin="10,10,250,10" Width="200px" Height="30px" Click="loginButton_Click"/>
        <Button x:Name="registerButton" Content="Regisztráció" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" Margin="250,10,30,10" Width="200px" Height="30px" Click="registerOpenButton_Click"/>
    </Grid>
</Window>
