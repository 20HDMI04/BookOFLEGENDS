<Window x:Class="BookOFLEGENDS.BookOfData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookOFLEGENDS"
        mc:Ignorable="d"
        Title="BookOfData" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <Image Width="200" Source="C:\Users\HDMI\source\repos\BookOFLEGENDS\bin\Debug\logo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,550,0"/>

        <Button x:Name="BooksList" Content="Books" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="100" Margin="0,5,150,0" Click="BooksList_Click" Background="White" BorderThickness="0" FontSize="15"/>
        <Button x:Name="AllUsers" Content="Users" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="100" Margin="0,5,-50,0" Background="White" BorderThickness="0" FontSize="15" Click="AllUsers_Click" />
        <Button x:Name="LogOut" Content="Kijelentkezés" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,-600,0" Background="White" BorderThickness="0" FontSize="15" Width="200" MinWidth="100" MaxWidth="300" Height="30" Click="LogOut_Click" />

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10"/>
    </Grid>
</Window>
