<Window x:Class="BookOFLEGENDS.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookOFLEGENDS"
        mc:Ignorable="d"
        Title="RegisterPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Width="200" Source="C:\Users\HDMI\source\repos\BookOFLEGENDS\bin\Debug\logo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,550,0"/>

        <Label Content="Felhasználónév:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="-155,-200,30,10"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="180,-200,30,10" Width="200px" Height="30px"/>

        <Label Content="Email:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="-100,-100,30,10"/>
        <TextBox x:Name="emailBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="180,-100,30,10" Width="200px" Height="30px"/>

        <Label Content="Jelszó:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="-100,0,30,10"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="180,0,30,10" Width="200px" Height="30px"/>

        <Label Content="Jelszó újra:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="-100,100,30,10"/>
        <PasswordBox x:Name="passwordBox2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="180,100,30,10" Width="200px" Height="30px"/>

        <RadioButton x:Name="termsAndCondition" Content="Elfogadom hogy elfogják lopni adataim!"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="180,200,100,10"/>

        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"  Grid.ColumnSpan="2" Margin="10,10,250,10" Width="200px" Height="30px" Click="backButton_Click"/>
        <Button x:Name="registerButton" Content="Regisztráció" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" Margin="250,10,30,10" Width="200px" Height="30px" Click="registerButton_Click"/>
    </Grid>
</Window>
